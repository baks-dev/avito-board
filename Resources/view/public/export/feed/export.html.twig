{# @var product \BaksDev\Avito\Board\Repository\AllProductsWithMapper\AllProductsWithMapperResult #}
<?xml version="1.0" encoding='UTF-8'?>

<Ads formatVersion='3' target='Avito.ru'>

    {% for product in products %}

        {% set tags = product_transform(product) %}

        {% if tags is not null %}
            <Ad>
            {% for tag, data in tags %}
                <{{ tag }}>
                {{ data|raw }}
                </{{ tag }}>
            {% endfor %}
            </Ad>

        {% endif %}

    {% endfor %}

</Ads>
